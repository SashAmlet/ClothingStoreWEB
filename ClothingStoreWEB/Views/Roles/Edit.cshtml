@using Microsoft.AspNetCore.Identity
@model ClothingStoreWEB.ViewModel.ChangeRoleViewModel

<h2>Changing roles for a user @Model.UserEmail</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <div class="form-check">
                <input type="checkbox" name="roles" value="@role.Name" class="form-check-input" @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "")>
                <label class="form-check-label">@role.Name</label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
